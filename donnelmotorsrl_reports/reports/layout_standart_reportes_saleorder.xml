<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="layout_standart_reportes_saleorder">
            <t t-if="not o" t-set="o" t-value="doc" />
            <t t-if="not company">
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id" />
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()" />
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company" />
                </t>
            </t>
            <!-- HEADER -->
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <style type="text/css">
                    thead, tbody, th, tr, td {
                        border: none !important;
                    }
                </style>
                <br/>
                <br/>
                <br/>
                <table style="width:100%;">
                    <tr style="font-size: 20px;" colspan="2">
                        <td><strong>ORDEN DE TRABAJO - OT</strong></td>
                    </tr>
                    <tr>
                        <td style="font-size: 15px;">
                            <strong>Número de orden: </strong><span t-esc="o.name"/>
                        </td>
                        <td rowspan="4" style="font-size: 13px;">
                            <strong>
                                <span t-esc="o.partner_id.name"/>
                                <t t-if="o.partner_id.street">
                                    <br/>
                                    <span t-esc="o.partner_id.street"/>
                                </t>
                                <t t-if="o.partner_id.city">
                                    <br/>
                                    <span t-esc="o.partner_id.city"/>
                                    <span t-esc="o.partner_id.state_id.code"/>
                                    <span t-esc="o.partner_id.zip"/>
                                </t>
                                <t t-if="o.partner_id.country_id.name">
                                    <br/>
                                    <span t-esc="o.partner_id.country_id.name"/>
                                </t>
                            </strong>
                        </td>
                    </tr>
                    <t t-if="o.tasks_ids and len(o.tasks_ids) > 0">
                        <tr style="font-size: 13px;">
                            <td><strong>TIPO VEHICULO: </strong><span t-esc="o.tasks_ids[0].tipo_vehiculo"/></td>
                        </tr>
                        <tr style="font-size: 13px;">
                            <td><strong>AÑO: </strong><span t-esc="o.tasks_ids[0].year_vehiculo"/></td>
                        </tr>
                        <tr style="font-size: 13px;">
                            <td><strong>COLOR: </strong><span t-esc="o.tasks_ids[0].color_vehiculo"/></td>
                        </tr>
                        <tr style="font-size: 13px;">
                            <td><strong>VIN: </strong><span t-esc="o.tasks_ids[0].vin_vehiculo"/></td>
                        </tr>
                        <tr style="font-size: 13px;">
                            <td><strong>PLACA: </strong><span t-esc="o.tasks_ids[0].placa_vehiculo"/></td>
                            <td><strong>NIT: </strong><span t-esc="o.partner_id.vat"/></td>
                        </tr>
                        <tr style="font-size: 13px;">
                            <td><strong>KILOMETRAJE: </strong><span t-esc="o.tasks_ids[0].kilometraje_vehiculo"/></td>
                            <td><strong>CORREO: </strong><span t-esc="o.partner_id.email"/></td>
                        </tr>
                        <tr style="font-size: 13px;">
                            <td><strong>Fecha de la orden: </strong><span t-esc="o.date_order"/></td>
                            <td><strong>Vendedor: </strong><span t-esc="o.user_id.name"/></td>
                        </tr>
                    </t>
                </table>
            </div>
            <div class="article"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
            <div t-attf-class="footer">
                <div class="container">
                    <div class="row" style="width:100%;">
                        <div class="col-3" style="text-align: center;">
                            <strong>
                                -----------------------------
                                <br/>
                                Técnico a Cargo
                            </strong>
                        </div>
                        <div class="col-3" style="text-align: center;">
                            <strong>
                                -----------------------------
                                <br/>
                                Jefe Taller
                            </strong>
                        </div>
                        <div class="col-3" style="text-align: center;">
                            <strong>
                                -----------------------------
                                <br/>
                                Asesor
                            </strong>
                        </div>
                        <div class="col-3" style="text-align: center;">
                            <strong>
                                -----------------------------
                                <br/>
                                VoBo Cliente
                            </strong>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="text-center" style="border-top: 1px solid black;">
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
                <br/>
            </div>
        </template>
    </data>
</odoo>