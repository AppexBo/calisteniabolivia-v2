<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="cabecera_pdf">
            <t t-if="not o" t-set="o" t-value="doc" />
            <t t-if="not company">
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id" />
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()" />
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company" />
                </t>
            </t>
            <!-- HEADER -->
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <style type="text/css">
                    table {
                        border-spacing: 0px;
                        border: 1px solid #fff;
                    }
                </style>
                <table style="width:100%; text-align:center; margin-bottom:35px;font-family: 'Arial';">
                    <tr>
                        <td colspan="4" style="text-align: center; font-size:16px;">
                            <strong t-field="company.name"/>
                        </td>
                    </tr>
                </table>

                <table border="1" style="width:100%; border-collapse: collapse; font-size: 11px;font-family: 'Arial';">
                    <tr>
                        <td style="width: 50%; vertical-align: top;">
                            <table border="1" style="width: 100%; border-collapse: collapse;">
                                <tr>
                                    <td colspan="4">
                                        <strong>NIT:</strong>
                                        <span t-field="company.vat"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        <span t-field="company.state_id.name"/> - <span t-field="company.country_id"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td colspan="2" style="width: 50%; vertical-align: top;">
                            <table border="1" style="width: 100%; border-collapse: collapse;">
                                <tr>
                                    <td colspan="2">
                                        <strong style="color:white">.</strong>
                                    </td>
                                    <td style="width:33%;" class="text-right" colspan="2">
                                        <strong style="color:white">.</strong>
                                    </td>
                                    <td/>
                                    <td style="text-align: right; padding: 0;">
                                        Página:
                                        <span class="page"/> / <span class="topage"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <table border="1" style="width:100%; border-collapse: collapse; font-size: 11px;font-family: 'Arial';">
                    <tr style="font-size: 13px;">
                        <td><strong>TIPO VEHICULO: </strong><span t-esc="o.tasks_ids[0].tipo_vehiculo"/></td>
                    </tr>
                    <tr style="font-size: 13px;">
                        <td><strong>AÑO: </strong><span t-esc="o.tasks_ids[0].year_vehiculo"/></td>
                    </tr>
                    <tr style="font-size: 13px;">
                        <td><strong>COLOR: </strong><span t-esc="o.tasks_ids[0].color_vehiculo"/></td>
                    </tr>
                    <tr style="font-size: 13px;">
                        <td><strong>VIN: </strong><span t-esc="o.tasks_ids[0].vin_vehiculo"/></td>
                    </tr>
                    <tr style="font-size: 13px;">
                        <td><strong>PLACA: </strong><span t-esc="o.tasks_ids[0].placa_vehiculo"/></td>
                        <td><strong>NIT: </strong><span t-esc="o.partner_id.vat"/></td>
                    </tr>
                    <tr style="font-size: 13px;">
                        <td><strong>KILOMETRAJE: </strong><span t-esc="o.tasks_ids[0].kilometraje_vehiculo"/></td>
                        <td><strong>CORREO: </strong><span t-esc="o.partner_id.email"/></td>
                    </tr>
                    <tr style="font-size: 13px;">
                        <td><strong>Fecha de la orden: </strong><span t-esc="o.date_order"/></td>
                        <td><strong>Vendedor: </strong><span t-esc="o.user_id.name"/></td>
                    </tr>
                </table>

                <table border="1" style="width:100%; border-collapse: collapse; font-size: 11px;font-family: 'Arial';">
                    
                    <tr>
                        <td style="width: 80%; vertical-align: top;">
                            <table border="1" style="width: 100%;">
                                <tr>
                                    <td>
                                        <strong>Razón Social:</strong>
                                        <span style="font-weight: normal;" t-if="o.partner_id.name" t-field="o.partner_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Glosa:</strong>
                                        <span t-if="o.note" t-field="o.note" style="margin-left: 5px !important;" />
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td style="width: 20%; vertical-align: top;">
                            <table border="1" style="width: 100%;">
                                <tr>
                                    <td style="text-align: start;">
                                        <strong>Nro.:</strong>
                                    </td>
                                    <td style="text-align: end;">
                                        <span t-esc="o.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: start;">
                                        <strong>Gestión:</strong>
                                    </td>
                                    <td style="text-align: end;">
                                        <span t-esc="o.date_order.year"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: start;">
                                        <strong>Fecha:</strong>
                                    </td>
                                    <td style="text-align: end;">
                                        <span t-esc="o.date_order.strftime('%d/%m/%Y')"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                
            </div>
            <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
        </template>
    </data>
</odoo>
