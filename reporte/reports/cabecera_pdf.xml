<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="cabecera_pdf">
            <t t-if="not o" t-set="o" t-value="doc" />
            <t t-if="not company">
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id" />
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()" />
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company" />
                </t>
            </t>
            <!-- HEADER -->
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <!--Para eiliminar bordes de la tabla -->
                <style type="text/css">
                    table {
                        border-spacing: 0px;
                        border: 1px solid #fff;
                    }
                </style>
                <!--La parte superior de la cabecera-->
                <table style="width:100%; text-align:center; margin-bottom:35px;font-family: 'Arial';">
                    <tr>
                        <td colspan="4" style="text-align: center; font-size:16px;">
                            <strong t-field="company.name"/>
                        </td>
                    </tr>
                </table>
                <table border="1" style="width:100%; border-collapse: collapse; font-size: 11px;font-family: 'Arial';">
                    <tr>
                        <td style="width: 50%; vertical-align: top;">
                            <!-- Primera columna -->
                            <table border="1" style="width: 100%; border-collapse: collapse;">
                                
                                <t t-if="o.codigo_A1_or_A2 == 'A1'">
                                    <tr>
                                        <td colspan="4">
                                            <strong>NIT:</strong>
                                            <span t-field="company.vat"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="o.codigo_A1_or_A2 == 'A1'">
                                    <tr>
                                        <td colspan="4">
                                            <span t-field="company.state_id.name"/> - <span t-field="company.country_id"/>
                                        </td>
                                    </tr>
                                </t>
                                
                            </table>
                        </td>
                        <td colspan="2" style="width: 50%; vertical-align: top;">
                            <!-- Segunda columna -->
                            <table border="1" style="width: 100%; border-collapse: collapse;">
                                <tr>
                                    <td colspan="2">
                                        <strong style="color:white">.</strong>
                                    </td>
                                    <td style="width:33%;" class="text-right" colspan="2">
                                        <strong style="color:white">.</strong>
                                    </td>
                                    <td/>
                                    <td style="text-align: right; padding: 0;">
                                                Pagina:
                                        <span class="page"/>
                    /
                                        <span class="topage"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <!--La parte del medio de la cabecera-->
                    <!--Empresa fiscal usara el codigo A1-->
               
                    <table style="width:100%; text-align:center; margin-bottom:35px;font-family: 'Arial';">
                        <tr t-if="o.journal_id.type == 'general' or o.journal_id.type == 'purchase' or o.journal_id.type == 'sale'">
                            <td colspan="12" style="text-align: center; font-size:25px;">
                                <strong>COMPROBANTE DE DIARIO <t t-esc="o.codigo_A1_or_A2"/>-CD<t t-esc="o.mes_secuencia"/></strong>
                            </td>
                        </tr>
                        <tr t-if="(o.journal_id.type == 'bank' or o.journal_id.type == 'cash') and (o.payment_id.payment_type == 'inbound') or (o.payment_id.is_internal_transfer)">
                            <td colspan="12" style="text-align: center; font-size:25px">
                                <strong>COMPROBANTE DE INGRESO <t t-esc="o.codigo_A1_or_A2"/>-CI<t t-esc="o.mes_secuencia"/> </strong>
                            </td>
                        </tr>
                        <tr t-if="(o.journal_id.type == 'cash' or o.journal_id.type == 'bank') and (o.payment_id.payment_type == 'outbound')  or (o.payment_id.is_internal_transfer)">
                            <td colspan="12" style="text-align: center; font-size:25px;">
                                <strong>COMPROBANTE DE EGRESO <t t-esc="o.codigo_A1_or_A2"/>-CE<t t-esc="o.mes_secuencia"/> </strong>
                            </td>
                        </tr>
                    </table>
              

                
                <!--La parte inferior de la cabecera-->
                <table border="1" style="width:100%; border-collapse: collapse; font-size: 11px;font-family: 'Arial';">
                    <tr>
                        <td style="width: 80%; vertical-align: top;">
                            <!-- Primera columna -->
                            <table border="1" style="width: 100%; ">
                                <div  t-if="(o.journal_id.type == 'purchase') or (o.journal_id.type == 'sale')"  style="padding-right:50px"  >
                                    <strong>Razón Social:</strong>
                                    <span style="font-weight: normal;" t-if="o.partner_id.name" t-field="o.partner_id.name"/>
                                </div>
                                <div t-if="o.journal_id.type == 'general' " class="row"  style="padding-right:50px" >
                                    <strong>Razón Social:</strong>
                                    <span style="font-weight: normal;" t-if="o.razon_social_micelaneo_id" t-field="o.razon_social_micelaneo_id"/>
                                </div>
                                <div  t-if="(o.journal_id.type == 'cash' or o.journal_id.type == 'bank') and (o.payment_id.payment_type == 'outbound')  or (o.payment_id.is_internal_transfer)" class="row" style="padding-right:50px"   >
                                    <strong>Razón Social:</strong>
                                    <span style="font-weight: normal;" t-if="o.partner_id.name" t-field="o.partner_id.name"/>
                                </div>
                                <div t-if="o.journal_id.type == 'sale'" class="row" style="padding-right:50px;" >
                                    <strong>Glosa: </strong>
                                    <span  t-if="o.narration" t-field="o.narration"  style="margin-left: 5px !important;" />
                                    <!--<span t-field="o.narration"/>-->
                                    <!--  Mostrar términos y condiciones si existen  
                                                        <span t-if="o.terms_and_conditions">

                                                            <span t-field="o.terms_and_conditions"/>
                                                        </span>
                                                        <span t-if="o.ref">
                /
                                                            <span t-field="o.ref"/>
                                                        </span>-->
                                </div>
                                <div t-if="o.journal_id.type == 'purchase'" class="row" style="padding-right:50px;"  >
                                    <strong>Glosa: </strong>
                                    <span t-if="o.narration"  t-field="o.narration"  style="margin-left: 5px !important;"  />
                                    <!--  Mostrar términos y condiciones si existen 
                                                        <span t-if="o.terms_and_conditions">
                /
                                                            <span t-field="o.terms_and_conditions"/>
                                                        </span> -->
                                </div>
                                <div t-if="o.journal_id.type == 'general'" class="row" style="padding-right:50px;"  >
                                    <strong>Glosa: </strong>
                                    <span t-if="o.ref"  t-field="o.ref"  style="margin-left: 5px !important;" />
                                    <!--  Mostrar términos y condiciones si existen 
                                                        <span t-if="o.terms_and_conditions">
                /
                                                            <span t-field="o.terms_and_conditions"/>
                                                        </span> -->
                                </div>
                                <div t-if="((o.journal_id.type == 'bank') or (o.journal_id.type == 'cash')) and ((o.payment_id.payment_type == 'inbound') or (o.payment_id.payment_type == 'outbound'))" class="row" style="padding-right:50px;"  >
                                    <strong >Glosa:</strong>
                                    <span t-if="o.ref"  t-field="o.ref"  style="margin-left: 5px !important;"  />
                                    <!--  Mostrar términos y condiciones si existen 
                                                        <span t-if="o.terms_and_conditions">
                /
                                                            <span t-field="o.terms_and_conditions"/>
                                                        </span> -->
                                </div>
                            </table>
                        </td>
                        <td  style="width: 20%; vertical-align: top;">
                            <!-- Segunda columna -->
                            <table  border="1" style="width: 100%; ">
                                <!--<tr><br/></tr> Usar esto por is el cliente quiere mas arriba o mas abajo una de las columnas de esta tabla-->
                                <tr>
                                    <td  style="text-align: start;">
                                        <strong>Nro.:</strong>
                                    </td>
                                    <td style="text-align: end;">
                                        <span t-esc="o.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: start;">
                                        <strong>Gestión:</strong>
                                    </td>
                                    <td style="text-align: end;">
                                        <span t-esc="o.date.year"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: start;">
                                        <strong>Fecha:</strong>
                                    </td>
                                    <td style="text-align: end;">
                                        <span t-esc="o.date.strftime('%d/%m/%Y')"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="article"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
        </template>
    </data>
</odoo>
