<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_add_report_button" model="ir.ui.view">
        <field name="name">account.move.form.inherit.apolo.report</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_account_account_report)d"
                        type="action"
                        string="Libro Diario PDF"
                        class="btn-primary"
                        invisible="not (move_type in ('out_invoice','in_invoice')  and state =='posted')"
                         context="{'active_model': 'account.move', 'active_id': active_id}"
                        />
            </xpath>
        </field>
    </record>
   
</odoo>